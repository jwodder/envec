{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["cards"],
    "additionalProperties": true,
    "definitions": {
        "str1": {
            "type": "string",
            "minLength": 1
        },
        "nullstr1": {
            "oneOf": [{"type": "string", "minLength": 1}, {"type": "null"}]
        },
        "PT": {
            "oneOf": [
                {"type": "number"},
                {"type": "string", "minLength": 1, "pattern": "[*Â½]"}
            ]
        },
        "HL": {"type": "string", "pattern": "^[-+][0-9]+$"},
        "multival": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "oneOf": [
                        {"$ref": "#/definitions/str1"},
                        {"type": "integer"}
                    ]
                }
            }
        }
    },
    "properties": {
        "date": {"type": "string"},
        "cards": {
            "type": "array",
            "items": {
                "title": "card",
                "type": "object",
                "NOTES": [
                    "All mana and special symbols are referred to using the same notation as in the comprehensive rules.",
                    "Newlines in text must be maintained for paragraph breaks and lines of flavored verse.",
                    "Italicized text is enclosed in underscores.",
                    "The \"default\" rules and P/T of leveler cards are given in the <content>'s primary \"rules\", \"power\", and \"toughness\" fields."
                ],
                "allOf": [
                    {
                        "required": ["content", "printings"],
                        "properties": {
                            "content": {
                                "type": "array",
                                "minItems": 1,
                                "NOTE": "Normal cards have just one `content` item.  Other card classes have one item for each \"subcard,\" in the appropriate order (left-to-right for split, top-to-bottom for flip, front-to-back for double-faced).",
                                "items": {
                                    "type": "object",
                                    "required": ["name", "types"],
                                    "properties": {
                                        "name": {"$ref": "#/definitions/str1"},
                                        "cost": {"$ref": "#/definitions/nullstr1"},
                                        "supertypes": {
                                            "type": "array",
                                            "items": {"$ref": "#/definitions/str1"},
                                            "default": []
                                        },
                                        "types": {
                                            "type": "array",
                                            "items": {"$ref": "#/definitions/str1"},
                                            "minItems": 1
                                        },
                                        "subtypes": {
                                            "type": "array",
                                            "items": {"$ref": "#/definitions/str1"},
                                            "default": []
                                        },
                                        "color_indicator": {
                                            "oneOf": [
                                                {"type": "null"},
                                                {
                                                    "type": "string",
                                                    "pattern": "^W?U?B?R?G?$"
                                                }
                                            ]
                                        },
                                        "text": {"$ref": "#/definitions/nullstr1"},
                                        "power": {"$ref": "#/definitions/PT"},
                                        "toughness": {"$ref": "#/definitions/PT"},
                                        "loyalty": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "hand": {"$ref": "#/definitions/HL"},
                                        "life": {"$ref": "#/definitions/HL"},
                                        "levels": {
                                            "type": "array",
                                            "minItems": 1,
                                            "items": {
                                                "type": "object",
                                                "required": ["min"],
                                                "properties": {
                                                    "min": {"type": "integer", "minimum": 1},
                                                    "max": {"type": "integer"},
                                                    "text": {"$ref": "#/definitions/nullstr1"},
                                                    "power": {"$ref": "#/definitions/PT"},
                                                    "toughness": {"$ref": "#/definitions/PT"}
                                                },
                                                "dependencies": {
                                                    "power": ["toughness"],
                                                    "toughness": ["power"]
                                                }
                                            }
                                        }
                                    },
                                    "oneOf": [
                                        {"required": ["power", "toughness"]},
                                        {"required": ["hand", "life"]},
                                        {"required": ["loyalty"]},
                                        {
                                            "not": {
                                                "anyOf": [
                                                    {"required": ["power"]},
                                                    {"required": ["toughness"]},
                                                    {"required": ["hand"]},
                                                    {"required": ["life"]},
                                                    {"required": ["loyalty"]}
                                                ]
                                            }
                                        }
                                    ]
                                }
                            },
                            "printings": {
                                "type": "array",
                                "minItems": 1,
                                "NOTE": "If multiple versions of the same card were printed in a single set, each one gets a separate entry.",
                                "items": {
                                    "type": "object",
                                    "required": ["set"],
                                    "properties": {
                                        "set": {"$ref": "#/definitions/str1"},
                                        "rarity": {
                                            "enum": [
                                                "land",
                                                "common",
                                                "uncommon",
                                                "rare",
                                                "mythic_rare",
                                                "special",
                                                "bonus",
                                                "promo"
                                            ]
                                        },
                                        "multiverseid": {"$ref": "#/definitions/multival"},
                                        "number": {"$ref": "#/definitions/multival"},
                                        "flavor": {"$ref": "#/definitions/multival"},
                                        "artist": {"$ref": "#/definitions/multival"},
                                        "watermark": {"$ref": "#/definitions/multival"},
                                        "notes": {"$ref": "#/definitions/multival"}
                                    }
                                }
                            },
                            "rulings": {
                                "type": "array",
                                "default": [],
                                "items": {
                                    "type": "object",
                                    "required": ["date", "ruling"],
                                    "properties": {
                                        "date": {"$ref": "#/definitions/str1"},
                                        "ruling": {"type": "string"},
                                        "subcard": {"type": "integer"}
                                    }
                                }
                            }
                        }
                    },
                    {
                        "oneOf": [
                            {
                                "properties": {
                                    "cardClass": {"enum": ["normal"]},
                                    "content": {"maxItems": 1}
                                }
                            },
                            {
                                "required": ["cardClass"],
                                "properties": {
                                    "cardClass": {
                                        "enum": ["split", "flip", "double_faced", "BFM"]
                                    },
                                    "content": {"maxItems": 2, "minItems": 2}
                                }
                            }
                        ]
                    }
                ]
            }
        }
    }
}
